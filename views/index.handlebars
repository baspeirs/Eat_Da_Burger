<h1>Eat Dem Burgers!</h1>

<article class="container">
   <section class="row" id="add-burg-section">
    <div class="col-12">
      <h2>Add a Burger</h2>
      
        <form class="row create-form">
          <div class="col-2"></div>
          <div class="col-4">
            <div class="form-group">
              <label for="ca" id="submit-text">Burger Name:</label>
              <input type="text" id="ca" name="name">
            </div>
          </div>
          <div class="col-3">
            <button type="button" id="add-burg-button" class="btn btn-success">Add Burger</button>
          </div>
          <div class="col-3"></div>
        </form>
      
      
    </div>
  </section>

  <section class="row">
    <div class="col-md-6">
      <h2>Want to try</h2>
          {{#each burgers}}
            {{#unless devoured}}
                  <div class="row">
                    <div class="col-8">
                      <span class="label"><p class="try-burger">{{this.burger_name}}</p></span>
                    </div>
                    <div class="col-4">
                      <button data-id="{{this.id}}" data-devoured="{{this.devoured}}" class="devour-burg btn btn-success">Devour!</button>
                    </div>
                  </div>
            {{/unless}}
          {{/each}}
    </div>

    <div class="col-md-6">
      <h2>Favorites</h2>
          {{#each burgers}}
            {{#if devoured}}
              <div class="row">
                <div class="col-8">
                  <span class="label"><p class="favorites">{{this.burger_name}}</p></span>
                </div>
                <div class="col-4">
                  <button data-id="{{this.id}}" class="del-quote btn btn-danger">Delete</button>
                </div>
              </div>
            {{/if}}
          {{/each}}
    </div>

  </section>
</article>
